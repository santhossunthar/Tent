<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.eYe3.Tent.MailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/layout_background"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/mail_vf_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Your Email Address"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/mail_vf_resend_btn"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:background="@drawable/button_style"
            android:text="Sent Email verification Link"
            android:textColor="@color/black"
            android:textSize="12sp"/>


        <Button
            android:id="@+id/mail_vf_btn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:background="@drawable/button_style"
            android:text="Confirm"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>
