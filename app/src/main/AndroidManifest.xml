<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eYe3.Tent">

    <uses-sdk tools:overrideLibrary="com.google.firebase.iid" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.eYe3.Tent.ComReplyActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.eYe3.Tent.ComProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.eYe3.Tent.MessageActivity" />
        <activity
            android:name="com.eYe3.Tent.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.eYe3.Tent.UserActivity" />
        <activity
            android:name="com.eYe3.Tent.MailActivity" />
        <activity
            android:name="com.eYe3.Tent.PasswordActivity"/>
        <activity
            android:name="com.eYe3.Tent.StartActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.eYe3.Tent.PostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.eYe3.Tent.LoginActivity"
            android:label="LoginActivity" />
        <activity android:name="com.eYe3.Tent.MainActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.eYe3.Tent.RegisterActivity" />
        <activity
            android:name="com.eYe3.Tent.ClickPostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>